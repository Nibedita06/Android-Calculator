<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="99dp"
            android:layout_weight="0.67"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtIp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:gravity="right"
                android:hint="Enter"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:textColorHint="#D1C5DA"
                android:textSize="60sp" />


            <TextView
                android:id="@+id/txtOp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:gravity="right"
                android:hint="Result"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:textColorHint="#CCC1DC"
                android:textSize="60sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="5"
                android:onClick="btnClr"
                android:text="Clear"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight=".51"
                android:onClick="Bs"
                android:text="BS"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnSeven"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:onClick="btnSeven"
                android:text="7"
                android:textSize="40sp"
                android:textStyle="normal" />


            <Button
                android:id="@+id/btnEight"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:onClick="btnEight"
                android:text="8"
                android:textSize="40sp"
                android:textStyle="normal" />


            <Button
                android:id="@+id/btnNine"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:onClick="btnNine"
                android:text="9"
                android:textSize="40sp"
                android:textStyle="normal" />


            <Button
                android:id="@+id/btnDivide"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1.15"
                android:onClick="btnDiv"
                android:text="/"
                android:textSize="40sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnFour"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:onClick="btnFour"
                android:text="4"
                android:textSize="40sp"
                android:textStyle="normal" />


            <Button
                android:id="@+id/btnFive"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:onClick="btnFive"
                android:text="5"
                android:textSize="40sp"
                android:textStyle="normal" />


            <Button
                android:id="@+id/btnSix"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:onClick="btnSix"
                android:text="6"
                android:textSize="40sp"
                android:textStyle="normal" />


            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight=".98"
                android:onClick="btnMul"
                android:text="x"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnOne"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:onClick="btnOne"
                android:text="1"
                android:textSize="40sp"
                android:textStyle="normal" />


            <Button
                android:id="@+id/btnTwo"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:onClick="btnTwo"
                android:text="2"
                android:textSize="40sp"
                android:textStyle="normal" />


            <Button
                android:id="@+id/btnThree"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:onClick="btnThree"
                android:text="3"
                android:textSize="40sp"
                android:textStyle="normal" />


            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1.27"
                android:onClick="btnSub"
                android:text="-"
                android:textSize="40sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnDecimal"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1.22"
                android:onClick="btnDec"
                android:text="."
                android:textSize="40sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnZero"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight=".98"
                android:onClick="btnZero"
                android:text="0"
                android:textSize="40sp"
                android:textStyle="normal" />


            <Button
                android:id="@+id/btnEquals"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight=".95"
                android:onClick="btnEq"
                android:text="="
                android:textSize="40sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight=".93"
                android:onClick="btnAdd"
                android:text="+"
                android:textSize="40sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
